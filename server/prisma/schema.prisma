// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  theme    = "neutral"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  password   String? // Tornar opcional para suportar logins via Google
  name       String
  googleId   String? // Campo para ID do Google
  profileUrl String? // Campo para URL da imagem de perfil
  groups     Group[]
}

model Book {
  id        String  @id @default(cuid())
  title     String
  bannerUrl String
  author    String
  isbn      String  @unique
  price     Float
  synopsis  String?
}

model Group {
  id        String   @id @default(cuid())
  name      String
  discord   String
  weekDays  String
  hourStart Int
  hourEnd   Int
  createdAt DateTime @default(now())
  isPrivate Boolean  @default(true)
  members   User     @relation(fields: [userId], references: [id])
  userId    String
}
